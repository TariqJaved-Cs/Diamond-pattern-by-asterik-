#include<stdio.h>
int main()
{
    int i,j,k,l,m,space;

    space=10;
     for (int i = 0; i < 10; i++)
    {

        for (int j = 0;j < space; j++)
            printf(" ");

        // Print i+1 stars
        for (int j = 0; j <= i; j++)
          {
             printf("* ");
          }

        printf(" \n");
        space--;
    }

     space = 0;
    for (int i = 10; i > 0; i--)
    {

        for (int j = 0; j < space; j++)
        printf(" ");

            for (int j = 0;j < i;j++)
            printf(" *");

         printf("\n");
        space++;
    }


}
